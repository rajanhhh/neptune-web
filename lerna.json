{
  "command": {
    "publish": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "verifyAccess": false,
      "ignoreChanges": [
        "**/*.md",
        "**/*.spec.js",
        "**/*.yml",
        "**/*.docs.js",
        "**/components/docs/**",
        "packages/docs"
      ]
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent"
}
